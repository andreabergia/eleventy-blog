<div class="post-content-section">
  <div class="post-content-wrapper">
    <div class="home-columns">
      {% if collections.featuredPosts and collections.featuredPosts.length %}
      <section>
        <h2 style="margin-top: 0;"><svg class="section-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg> Featured Posts</h2>
        <ul class="post-list post-list--stacked post-list--featured">
          {% for post in collections.featuredPosts %}
          <li>
            <a href="{{ post.url }}">
              <span class="post-title">{{ post.data.title }}</span>
              <span class="post-meta">
                {% if post.data.tags %}
                  {% for tag in post.data.tags %}
                    <span class="post-tag-inline">{{ tag }}</span>
                  {% endfor %}
                {% endif %}
              </span>
            </a>
          </li>
          {% endfor %}
        </ul>
      </section>
      {% endif %}

      {% set recentPosts = collections.recentPosts %}
      {% if recentPosts and recentPosts.length %}
      <section>
        <h2 style="margin-top: 0;"><svg class="section-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg> Recent Posts</h2>
        <ul class="post-list post-list--stacked post-list--recent">
          {% for post in recentPosts %}
          <li>
            <a href="{{ post.url }}">
              <span class="post-title">{{ post.data.title }}</span>
              <span class="post-meta">{{ post.date | readableDate }}</span>
            </a>
          </li>
          {% endfor %}
        </ul>
      </section>
      {% else %}
      <p>No posts yet. Migration in progress.</p>
      {% endif %}
    </div>

    <p style="margin-top: var(--space-xl); text-align: center;">
      <a href="/post/" style="font-weight: 600;">View all posts â†’</a>
    </p>
  </div>
</div>
