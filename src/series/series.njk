---
layout: layouts/page.njk
pagination:
  data: collections.series
  size: 1
  alias: series
permalink: /series/{{ series.slug }}/index.html
eleventyComputed:
  title: "Series: {{ series.name }}"
---

<div class="post-header-section">
  <div class="post-header-content">
    <h1>{{ series.name }}</h1>
    {% if series.posts and series.posts.length %}
    <div class="post-metadata">
      <div class="post-meta-row">
        <span class="post-meta-item">
          <svg class="meta-icon" viewBox="0 0 16 16" fill="currentColor"><path d="M3 2.5a2.5 2.5 0 0 1 5 0 2.5 2.5 0 0 1 5 0v.006c0 .07 0 .27-.038.494H15a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a1.5 1.5 0 0 1-1.5 1.5h-11A1.5 1.5 0 0 1 1 14.5V7a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h2.038A2.968 2.968 0 0 1 3 2.506V2.5zm1.068.5H7v-.5a1.5 1.5 0 1 0-3 0c0 .085.002.274.045.43a.522.522 0 0 0 .023.07zM9 3h2.932a.56.56 0 0 0 .023-.07c.043-.156.045-.345.045-.43a1.5 1.5 0 0 0-3 0V3zM1 4v2h6V4H1zm8 0v2h6V4H9zm5 3H9v8h4.5a.5.5 0 0 0 .5-.5V7zm-7 8V7H2v7.5a.5.5 0 0 0 .5.5H7z"/></svg>
          {{ series.posts | length }} posts in series
        </span>
      </div>
    </div>
    {% endif %}
  </div>
</div>

<div class="post-content-section">
  <div class="post-content-wrapper">
    {% if series.posts and series.posts.length %}
    <ul class="post-list post-list--stacked">
      {% for post in series.posts %}
      <li>
        <a href="{{ post.url }}">
          <span class="post-meta">{{ post.date | readableDate }}</span>
          <span class="post-title">{{ post.data.title }}</span>
        </a>
      </li>
      {% endfor %}
    </ul>
    {% else %}
    <p>This series does not have any posts yet.</p>
    {% endif %}
  </div>
</div>
